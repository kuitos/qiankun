{
  "name": "qiankun-monorepo",
  "private": true,
  "engines": {
    "node": ">=12.0.0"
  },
  "scripts": {
    "dev": "pnpm run build && npm run start:main && npm run start:react15",
    "start:main": "cd ./examples/main && npm start",
    "start:react15": "cd ./examples/react15 && npm start",
    "build": "pnpm -r --filter ./packages run build",
    "build:all": "cd packages/shared && pnpm run build && cd ../sandbox && pnpm run build && cd ../loader && pnpm run build && cd ../qiankun && pnpm run build",
    "build-qiankun": "pnpm run build --filter qiankun",
    "release": "np --no-cleanup --yolo --no-publish",
    "prepublishOnly": "pnpm run lint && pnpm run test && pnpm run build",
    "lint": "eslint packages/*/src/**",
    "prettier": "prettier --write .",
    "docs": "dumi dev",
    "build-docs": "dumi build",
    "ci": "pnpm run lint && pnpm run build && pnpm run test",
    "test": "cross-env NODE_ENV=test jest",
    "prepare": "husky install"
  },
  "devDependencies": {
    "@jest/types": "^27.5.1",
    "@umijs/fabric": "^2.0.7",
    "cross-env": "^7.0.2",
    "dumi": "^1.1.0-beta.24",
    "dumi-theme-default": "^1.0.10",
    "eslint": "^8.10.0",
    "eslint-define-config": "^1.2.5",
    "husky": "^8.0.3",
    "jest": "^25.2.2",
    "lint-staged": "^9.4.2",
    "prettier": "^2.1.2",
    "rimraf": "^3.0.0",
    "ts-jest": "^25.2.1",
    "umi-plugin-hire": "^1.0.3"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/kuitos/qiankun.git"
  },
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/kuitos/qiankun/issues"
  },
  "homepage": "https://github.com/kuitos/qiankun#readme",
  "lint-staged": {
    "**/*.{js,ts,json,css,md}": [
      "prettier --write --ignore-unknown"
    ],
    "packages/*/{src,types}/**/*.ts": [
      "eslint --cache --ext .js,.jsx,.ts,.tsx --format=pretty --fix"
    ],
    "packages/**/*.d.ts": [
      "eslint --ext .ts"
    ]
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "ts"
    ],
    "testMatch": [
      "<rootDir>/packages/**/__tests__/**/*.test.ts"
    ],
    "testPathIgnorePatterns": [
      "/node_modules/",
      "/fixtures/"
    ],
    "transform": {
      "^.+\\.ts$": "<rootDir>/node_modules/ts-jest"
    },
    "coveragePathIgnorePatterns": [
      "/node_modules/",
      "/__tests__/",
      "/dist/"
    ]
  },
  "packageManager": "pnpm@8.4.0"
}
